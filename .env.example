LOG_LEVEL=debug
SESSION_DURATION=720h
DOMAIN=localhost
DB_HOST=localhost
DB_PORT=5438
DB_NAME=iota_erp
DB_USER=postgres
DB_PASSWORD=postgres
GO_APP_ENV=dev
OPENAI_KEY=example-api-key
ACTION_LOG_ENABLED=false

# Outbox (DEV-PLAN-017)
OUTBOX_RELAY_ENABLED=true
OUTBOX_RELAY_TABLES=
OUTBOX_RELAY_SINGLE_ACTIVE=true
OUTBOX_RELAY_POLL_INTERVAL=1s
OUTBOX_RELAY_BATCH_SIZE=100
OUTBOX_RELAY_LOCK_TTL=60s
OUTBOX_RELAY_MAX_ATTEMPTS=25
OUTBOX_RELAY_DISPATCH_TIMEOUT=30s
OUTBOX_LAST_ERROR_MAX_BYTES=2048
OUTBOX_CLEANER_ENABLED=true
OUTBOX_CLEANER_TABLES=
OUTBOX_CLEANER_INTERVAL=1m
OUTBOX_CLEANER_RETENTION=168h
OUTBOX_CLEANER_DEAD_RETENTION=0

# Prometheus metrics (optional)
PROMETHEUS_METRICS_ENABLED=false
PROMETHEUS_METRICS_PATH=/debug/prometheus

# DEV-PLAN-018: routing safety gates (production defaults)
# - In production, /_dev/* is disabled unless explicitly enabled.
ENABLE_DEV_ENDPOINTS=false
# - In production, /playground is disabled unless explicitly enabled.
ENABLE_GRAPHQL_PLAYGROUND=false

# DEV-PLAN-018: Ops endpoints guard (enforced in production)
# Protects /health and /debug/prometheus (when metrics are enabled).
OPS_GUARD_ENABLED=true
# Allow ops access from CIDRs (comma/space separated), e.g. "10.0.0.0/8,192.168.0.0/16"
OPS_GUARD_CIDRS=
# Or protect with a token (header X-Ops-Token or Authorization: Bearer <token>)
OPS_GUARD_TOKEN=
# Or protect with BasicAuth
OPS_GUARD_BASIC_AUTH_USER=
OPS_GUARD_BASIC_AUTH_PASS=

# Test-only endpoints (default disabled)
ENABLE_TEST_ENDPOINTS=false

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_GLOBAL_RPS=1000
RATE_LIMIT_STORAGE=memory
# RATE_LIMIT_REDIS_URL=redis://localhost:6379
GOOGLE_CLIENT_ID=example-client-id
GOOGLE_CLIENT_SECRET=example-client-secret
GOOGLE_REDIRECT_URL=http://localhost:3000/auth/google/callback
SID_COOKIE_KEY=sid
TELEGRAM_BOT_TOKEN=""
