	&base.TableColumn{Label: pageCtx.T("Authz.Action"), Key: "action"},
	&base.TableColumn{Label: pageCtx.T("Authz.Effect"), Key: "effect", Class: "w-28"},
	&base.TableColumn{Label: pageCtx.T("Actions"), Key: "actions", Class: "w-32"},
)
