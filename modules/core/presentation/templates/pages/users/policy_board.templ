	&base.TableColumn{Label: pageCtx.T("Authz.Role"), Key: "role"},
	&base.TableColumn{Label: pageCtx.T("Authz.Domain"), Key: "domain"},
	&base.TableColumn{Label: pageCtx.T("Actions"), Key: "actions", Class: "w-32"},
)
				}}
			} else {
