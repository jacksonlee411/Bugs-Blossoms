	&base.TableColumn{Label: pageCtx.T("Authz.Type"), Key: "type", Class: "w-14"},
	&base.TableColumn{Label: pageCtx.T("Authz.Subject"), Key: "subject"},
	&base.TableColumn{Label: pageCtx.T("Authz.Domain"), Key: "domain"},
